                                    <partial name="_KhachHangPartial"/>
                                    <partial name="_NhanVienPartial"/>
                                    <partial name="_DichVuPartial"/>
                                    <partial name="_TacVuPhongPartial"/>
                                    <partial name="_LuongNVPartial"/>
                                    <partial name="_ThanhToanPartial"/>
